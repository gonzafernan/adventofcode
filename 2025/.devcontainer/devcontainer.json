{
    "name": "Base DevContainer",
    "dockerFile": "Dockerfile",
    "context": "..",

    "features": {
        "ghcr.io/duduribeiro/devcontainer-features/neovim:1": {},
    },
    "remoteUser": "dev",
    "mounts": [
        "source=${localEnv:HOME}/.config/nvim,target=/home/dev/.config/nvim,type=bind",
    ]
}
